# .env.example
# Copy this file to `.env` and fill in the values as needed.
# This file includes BOTH frontend (Vite) and backend (FastAPI) configuration.

# ==============================================================================
# Frontend (Vite) - Build-time environment variables
# ==============================================================================
# Base URL for API calls from the frontend. For local development, proxy is used,
# but in production set this to your backendâ€™s public URL + /api.
# Examples:
# - Local (proxy):              /api
# - Local (direct):             http://localhost:8000/api
# - Production (same domain):   https://api.freelancer-toolkit.com/api
VITE_API_BASE_URL=/api

# Application display name (used for document title, etc.)
VITE_APP_NAME=Freelancer Toolkit


# ==============================================================================
# Backend (FastAPI) - Runtime environment variables
# ==============================================================================
# Runtime environment name: development | staging | production | test
ENVIRONMENT=development

# Enable verbose logs and debug behaviors (do NOT enable in production)
DEBUG=false

# Secret key for signing/crypto (change to a strong secret in production)
SECRET_KEY=change-me-in-production


# --- External API Keys (Required for full functionality) ---
# Primary LLM provider (Gemini 2.5 Flash)
GEMINI_API_KEY=
# Text-to-Speech provider (ElevenLabs)
ELEVENLABS_API_KEY=
# Optional: Perplexity key (if/when used in production)
PERPLEXITY_API_KEY=


# --- CORS / Frontend Origin (Production) ---
# FRONTEND_URL: the deployed frontend origin (single value)
# CORS_ORIGINS: list of allowed origins (JSON array OR comma-separated string)
# Examples:
# FRONTEND_URL=https://freelancer-toolkit.com
# CORS_ORIGINS=["https://freelancer-toolkit.com","https://staging.freelancer-toolkit.com"]
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=["http://localhost:5173","http://localhost:8000"]


# --- Public base URL for the backend ---
# Used to generate absolute URLs (e.g., for audio files served under /audio).
# Examples:
# - Local:      http://localhost:8000
# - Production: https://api.freelancer-toolkit.com
PUBLIC_BASE_URL=http://localhost:8000


# --- File storage for generated audio ---
# Path on disk where audio files are saved. Default is set in Dockerfile.
AUDIO_STORAGE_PATH=/app/audio_files

# Maximum allowed audio file size in bytes (default 10MB)
MAX_AUDIO_FILE_SIZE=10485760


# --- Database configuration (optional for current MVP) ---
# SQLite (local dev): sqlite:///./freelancer_toolkit.db
# PostgreSQL:         postgresql+psycopg2://user:password@host:5432/dbname
DATABASE_URL=sqlite:///./freelancer_toolkit.db


# ==============================================================================
# Example production configuration (Single Docker on Azure)
# Uncomment and adjust for your deployment
# ==============================================================================
# ENVIRONMENT=production
# DEBUG=false
# SECRET_KEY=generate-a-strong-secret
# PUBLIC_BASE_URL=https://api.yourdomain.com
# FRONTEND_URL=https://yourdomain.com
# CORS_ORIGINS=["https://yourdomain.com"]
# VITE_API_BASE_URL=https://api.yourdomain.com/api
# AUDIO_STORAGE_PATH=/app/audio_files
# MAX_AUDIO_FILE_SIZE=10485760
# DATABASE_URL=sqlite:///./freelancer_toolkit.db
